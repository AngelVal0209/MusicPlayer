@model MusicPlayer.ViewM.LoginUVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Logueo de usuario</h1>

        <form asp-controller="Login" asp-action="Login" method="post">
           

            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label">Correo Electrónico</label>
                <input asp-for="CorreoElectronico" class="form-control mb-3" type="email" placeholder="Correo Electrónico" required />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contrasena" class="control-label">Contraseña</label>
                <input asp-for="Contrasena" class="form-control mb-3" type="password" placeholder="Contraseña" required minlength="6" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Login</button>

            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }

            <div class="mt-3">
                ¿Aún no tienes cuenta?
                <a asp-controller="Login" asp-action="Registro">Registrarse</a>
                <br />
                ¿Olvidaste tu contraseña?
                <a asp-controller="Login" asp-action="RecuperarContraseña">Recuperar contraseña</a>
            </div>
        </form>
        @if (ViewData["Exito"] != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewData["Exito"]
            </div>

            <script>
                setTimeout(function () {
                    window.location.href = '/Home/Index';
                }, 5000);
            </script>
        }

    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>