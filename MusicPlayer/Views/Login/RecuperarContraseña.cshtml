@model MusicPlayer.ViewM.RecuperarContraseñaUVM

@{
    Layout = null;
}

@{
    ViewData["Title"] = "Recuperar Contraseña";
    var successMessage = TempData["SuccessMessage"] as string;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - TuProyecto</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success" role="alert" id="successMessage">
        @successMessage
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert" id="successMessage">
            @TempData["SuccessMessage"]
        </div>

        <script>
            // Después de 5 segundos, redirigir al login
            setTimeout(function() {
                window.location.href = '@Url.Action("Login", "Login")'; // Cambia "Login" y "Login" si tus nombres de controlador o acción son diferentes
            }, 5000); // 5000 milisegundos = 5 segundos
        </script>
    }

}

<body>
    <div class="container mt-5">
        <h1 class="mb-4">Recuperar Contraseña</h1>

        <form asp-controller="Login" asp-action="RecuperarContraseña" method="post">

            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label">Nombre de Usuario</label>
                <input asp-for="NombreUsuario" class="form-control mb-3" placeholder="Nombre de Usuario" required />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label">Correo Electrónico</label>
                <input asp-for="CorreoElectronico" class="form-control mb-3" placeholder="Correo Electrónico" type="email" required />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaNacimiento" class="control-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control mb-3" type="date" required />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NuevaContrasena" class="control-label">Nueva Contraseña</label>
                <input asp-for="NuevaContrasena" class="form-control mb-3" type="password" placeholder="Nueva Contraseña" required minlength="6" />
                <span asp-validation-for="NuevaContrasena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmarNuevaContrasena" class="control-label">Confirmar Nueva Contraseña</label>
                <input asp-for="ConfirmarNuevaContrasena" class="form-control mb-3" type="password" placeholder="Confirmar Nueva Contraseña" required minlength="6" />
                <span asp-validation-for="ConfirmarNuevaContrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>

            @if (ViewData["Success"] != null && (bool)ViewData["Success"])
            {
                <div class="alert alert-success" role="alert">
                    @ViewData["MensajeExito"]
                </div>
                <script>
                    setTimeout(function () {
                        window.location.href = '@Url.Action("Login", "Login")';
                    }, 5000); // 5 segundos
                </script>
            }

            <div class="mt-3">
                ¿Recuperaste tu cuenta? <a asp-controller="Login" asp-action="Login">Iniciar sesión</a>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
